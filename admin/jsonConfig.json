                "_headerAuthentication": {
                    "newLine": true,
                    "type": "header",
                    "size": 3,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "text": "User credentials for restricted login"
                },
                "httpusername": {
                    "newLine": true,
                    "type": "text",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "HTTP Username",
                    "help": "Will be used to authenticate against generation 1 devices"
                },
                "httppassword": {
                    "type": "password",
                    "repeat": false,
                    "visible": true,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "HTTP Password",
                    "help": "You have to configure the same password on all devices"
