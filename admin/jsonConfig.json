                "_headerCustomOptions": {
                    "newLine": true,
                    "type": "header",
                    "size": 3,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "text": "Custom options"
                },
                "polltime": {
                    "newLine": true,
                    "type": "number",
                    "min": 5,
                    "max": 86400,
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Poll time in seconds"
                },
                "autoupdate": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Auto update of new firmware"
                },
                "updateUnchangedObjects": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Update objects even if there is no value change"
                },
                "_headerDebugging": {
                    "newLine": true,
                    "type": "header",
                    "size": 3,
                    "sm": 12,
                    "md": 12,
                    "lg": 12,
                    "text": "Debugging (expert options)"
                },
                "logDebugMessages": {
                    "newLine": true,
                    "type": "checkbox",
                    "sm": 12,
                    "md": 6,
                    "lg": 6,
                    "label": "Log Debug Messages"
